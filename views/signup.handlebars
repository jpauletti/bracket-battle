<!-- The Modal (contains the Sign Up form) -->
<div id="modalSignupForm" class="modal">
        <span>Better Odds</span>
        <form class="modal-content" id="signUpForm">
          <div class="container">
            <h1>Sign Up</h1>
            <p>Please fill in this form to create an account.</p>
            <hr>
            <label for="email"><b>Email</b></label>
            <input type="text" placeholder="Enter Email" id="enterEmail" name="email" required>
            <label for="psw"><b>Password</b></label>
            <input type="password" placeholder="Enter Password" id="enterPassword" name="psw" required>
            <label for="psw-repeat"><b>Repeat Password</b></label>
            <input type="password" placeholder="Repeat Password" id="enterPasswordRepeat" name="psw-repeat" required>
            <label>
              <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px"> Remember me
            </label>
            <p>By creating an account you agree to our <a href="terms.html" target="_blank" style="color:dodgerblue">Terms &
                Privacy</a>.</p>
            <div id="signupSuccessMessage" class="alert alert-success" role="alert">
              You successfully created an account!
            </div>
            <div id="signupFailMessage" class="alert alert-danger" role="alert">
              Something went terribly wrong.
            </div>
            <div class="clearfix">
              <button type="button" id="signUpCancelBtn" class="cancelbtn">Cancel</button>
              <button type="submit" id="signUpSubmitBtn" class="signup">Sign Up</button>
            </div>
          </div>
        </form>
      </div>
    </body>
    </html>